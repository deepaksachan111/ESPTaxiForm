<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/orange" />
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <corners
                android:radius="7dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FE0000"

                android:endColor="#FE5A00"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000" />
            <corners
                android:radius="7dp" />
        </shape>
    </item>
    </selector>